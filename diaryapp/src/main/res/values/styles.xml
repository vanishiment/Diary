<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- for library use when is in night theme-->
        <item name="themeColorSecondary">@color/theme_color_secondary</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:textColorPrimary">@color/text_primary_color</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_color_primary</item>
        <item name="colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="colorAccent">@color/theme_color_primary_dark</item>
        <item name="colorControlActivated">@color/theme_color_primary</item>
        <item name="colorControlHighlight">@color/gray_trans</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="preferenceTheme">@style/AppTheme.NoActionBar.Preference</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Widget.App.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:gravity">center_vertical</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="AppTheme.AppCompat.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:maxWidth">1080dp</item>
    </style>

    <style name="WindowAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AppTheme.NoActionBar.Preference" parent="PreferenceThemeOverlay.v14.Material">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>

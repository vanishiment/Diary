<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DiaryAppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/blue_primary_dark</item>
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorAccent">@color/blue_accent</item>
        <item name="android:windowBackground">@color/blue_window_background</item>
        <item name="android:textColorPrimary">@color/blue_primary_text</item>
        <item name="android:textColorSecondary">@color/blue_secondary_text</item>
        <item name="preferenceTheme">@style/DiaryAppTheme.Preference</item>
    </style>

    <style name="DiaryAppTheme" parent="DiaryAppTheme.Base">
    </style>

    <style name="DiaryAppTheme.Preference" parent="PreferenceThemeOverlay.v14.Material">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DiaryAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="DiaryAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="DiaryAppTheme.Widget.App.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:gravity">center_vertical</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="DiaryAppTheme.ProgressBarH">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">2dip</item>
        <item name="android:maxHeight">2dip</item>
    </style>

</resources>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_back"
    android:layout_width="250dp"
    android:layout_height="350dp"
    android:layout_centerInParent="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="8dp"
    tools:context=".ui.maindiarys.card.CardFragment"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <TextView
        android:id="@+id/card_back_month_number_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textSize="32sp"/>
    <TextView
        android:id="@+id/card_back_month_text_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_back_month_number_tv"
        android:gravity="center_horizontal"
        android:text="JAN"
        android:textColor="#FFFFFF"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/card_back_tip_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="从选中的日子写"/>

    <GridView
        android:id="@+id/card_back_date_view_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:numColumns="7"
        android:layout_above="@id/card_back_tip_tv"
        android:layout_below="@id/card_back_month_text_tv"/>

  </RelativeLayout>

</android.support.v7.widget.CardView>

